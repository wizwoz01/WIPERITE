/include/ "system-conf.dtsi"
#include <dt-bindings/gpio/gpio.h>

/ {
	model = "Smart Zynq SP1 Development Board";
	compatible = "digilent,zynq-SP1", "xlnx,zynq-7000";

	chosen {
		bootargs = "console=ttyPS0,115200 console=tty0 earlyprintk fbcon=map:0 root=/dev/mmcblk0p2 rw rootwait video=HDMI-A-1:1280x720M-32@60 net.ifnames=0";
	};

	aliases {
		ethernet0 = &gem0;
	};

	usb_phy0: usb_phy@0 {
		compatible = "ulpi-phy";
		#phy-cells = <0>;
		reg = <0xe0002000 0x1000>;
		view-port = <0x0170>;
		reset-gpios = <&gpio0 46 1>;
		drv-vbus;
	};

	/* Reserve framebuffer memory at 0x1e000000 (4 MB) */
	reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		framebuffer: framebuffer@1e000000 {
			compatible = "shared-dma-pool";
			reg = <0x1e000000 0x00400000>;
			no-map;
			reusable;
		};
	};
};

&i2c0 {
	clock-frequency = <100000>;
	status = "okay";
};

